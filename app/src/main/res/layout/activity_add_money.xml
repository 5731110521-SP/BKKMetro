<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/topup"
    android:padding="10dp">

    <Button
        android:id="@+id/cancleG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยกเลิก"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="34dp" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_weight="0.11"
        android:background="@android:drawable/btn_dropdown"
        android:dropDownWidth="match_parent"
        android:popupBackground="@android:color/white"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_centerVertical="true"
        android:text="จำนวนเงิน"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เลือกบัญชี"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_marginBottom="99dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/minus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <EditText
            android:id="@+id/money"
            android:layout_width="75dp"
            android:layout_height="41dp"
            android:background="@android:color/white"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:text="100"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <Button
        android:id="@+id/menAdd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_toStartOf="@+id/cancleG" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancleG"
        android:layout_alignBottom="@+id/cancleG"
        android:layout_alignEnd="@+id/spinner1"
        android:layout_alignRight="@+id/spinner1"
        android:text="เติมเงิน" />

</RelativeLayout>
